<h1 class="text-3xl font-bold mb-4">Create a New Mission</h1>

<%= form_with model: @mission, local: true do |form| %>

  <!-- Mission Title Field -->
  <div class="mb-4">
    <%= form.label :title, class: "block font-semibold mb-2" %>
    <%= form.text_field :title, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <!-- Mission Description Field -->
  <div class="mb-6">
    <%= form.label :description, class: "block font-semibold mb-2" %>
    <%= form.text_area :description, rows: 5, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <!-- Submit Button -->
  <div>
    <%= form.submit "Create Mission", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

<% end %>

<%= link_to 'Back to Missions', missions_path, class: 'mt-4 block text-blue-500 hover:underline' %>
