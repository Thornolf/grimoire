<div id="sound_<%= sound.id %>" class="bg-gray-100 p-4 rounded-md flex justify-between items-center">
  <div>
    <p class="font-bold text-lg"><%= sound.title %></p>
    <%= audio_tag url_for(sound.file), controls: true, class: "w-full mt-2" %>
  </div>
  <div>
    <%= button_to 'Remove', mission_remove_sound_from_path(@mission, sound), method: :delete, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700' %>
  </div>
</div>
