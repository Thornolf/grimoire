<div id="recent_history" class="mb-4">
  </br>
  <h2 class="text-2xl font-semibold mb-4 text-gray-700">Recent History</h2>

  <!-- Autosave form with Stimulus controller -->
  <%= form_with(model: [@mission, character_sheet], local: false, data: { controller: "autosave", action: "turbo:submit-end->autosave#reset" }) do |form| %>
    <div class="mb-6">
      <!-- Editable text area for recent history -->
      <%= form.text_area :recent_history, value: character_sheet.recent_history, class: "border-gray-300 rounded w-full p-2", placeholder: "Write your recent history here..." %>
    </div>
  <% end %>
</div>
