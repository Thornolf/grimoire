<h1 class="text-3xl font-bold mb-4"><%= @mission.title %></h1>

<p class="mb-6"><%= @mission.description %></p>

<h2 class="text-2xl font-semibold mb-2">Character Sheets</h2>

<% if @mission.character_sheets.any? %>
  <ul class="space-y-2">
    <% @mission.character_sheets.each do |sheet| %>
      <li class="p-4 bg-gray-100 rounded-md shadow-sm">
        <h3 class="font-bold text-lg"><%= link_to sheet.name, mission_character_sheet_path(@mission, sheet) %></h3>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600">No character sheets have been created for this mission yet.</p>
<% end %>

<%= link_to 'Create New Character Sheet', new_mission_character_sheet_path(@mission), class: 'bg-blue-500 text-white px-4 py-2 rounded mt-4 inline-block hover:bg-blue-700' %>

<h2 class="text-2xl font-semibold mb-2">Handouts</h2>

<% if @mission.handouts.any? %>
  <ul class="space-y-2">
    <% @mission.handouts.each do |handout| %>
      <li class="p-4 bg-gray-100 rounded-md shadow-sm flex justify-between items-center">
        <div>
          <h3 class="font-bold text-lg"><%= link_to handout.title, mission_handout_path(@mission, handout) %></h3>
        </div>

        <!-- Remove Handout Button -->
        <div>
          <%= button_to 'Remove', mission_remove_handout_from_path(@mission, handout), method: :delete, class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-700' %>
        </div>
      </li>
    <% end %>
  </ul>
<% else %>
  <p class="text-gray-600">No handout has been created for this mission yet.</p>
<% end %>

<div class="bg-white shadow-md rounded-lg p-6 mb-4">
  <div class="flex justify-between items-start space-x-4">
    <div>
      <%= link_to 'Create New Handout', new_mission_handout_path(@mission), class: 'bg-blue-500 text-white px-4 py-2 rounded inline-block hover:bg-blue-700' %>
    </div>

    <div class="w-full max-w-md">
      <%= form_with url: mission_add_handout_to_path(@mission), method: :post, local: true do |form| %>
        <div class="mb-4">
          <%= form.label :handout_id, "Select Handout to Add", class: "block font-semibold mb-2" %>
          <%= form.collection_select :handout_id, Handout.where.not(id: @mission.handouts.pluck(:id)), :id, :title, prompt: "Choose a Handout", class: "border border-gray-300 rounded w-full p-2" %>
        </div>

        <div class="mt-4">
          <%= button_tag type: 'submit', class: 'bg-green-500 px-4 py-2 rounded hover:bg-green-700' do %>
            Add Handout to Mission
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= link_to 'Back to Missions', missions_path, class: 'mt-4 block text-blue-500 hover:underline' %>
