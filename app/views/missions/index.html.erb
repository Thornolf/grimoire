<h1 class="text-4xl font-bold mb-6">All Missions</h1>

<% if @missions.any? %>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @missions.uniq.each do |mission| %>
      <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow border border-gray-200">
        <h3 class="text-2xl font-semibold text-blue-600 mb-2">
          <%= link_to mission.title, mission_path(mission), class: "hover:underline" %>
        </h3>
        <p class="text-gray-600">
          <%= mission&.description&.truncate(100) %> <!-- Truncate to avoid long descriptions -->
        </p>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-gray-600">No missions available.</p>
<% end %>

<% if current_user.game_master?%>
  <div class="mt-6">
    <%= link_to 'Create New Mission', new_mission_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition' %>
  </div>
<% end %>
