<h1 class="text-3xl font-bold mb-4">Manage Sounds</h1>

<div class="mb-6">
  <%= link_to "Create New Sound", new_sound_path, class: "bg-blue-500 px-6 py-2 rounded-lg shadow-md hover:bg-blue-700 text-white" %>
</div>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
  <% @sounds.each do |sound| %>
    <div class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <h2 class="text-xl font-semibold mb-2 text-blue-700"><%= sound.title %></h2>
      <p class="text-gray-600 mb-2"><%= sound.description %></p>

      <div class="flex justify-end space-x-2">
        <%= link_to "Play", sound_path(sound), class: "bg-green-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-green-700" %>
        <%= link_to "Edit", edit_sound_path(sound), class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-blue-700" %>
        <%= button_to "Delete", sound_path(sound), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-red-700" %>
      </div>
    </div>
  <% end %>
</div>
