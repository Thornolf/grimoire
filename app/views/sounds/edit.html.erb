<h1 class="text-3xl font-bold mb-4">Edit Sound</h1>

<%= form_with model: @sound, local: true do |form| %>
  <div class="mb-4">
    <%= form.label :title, "Sound Title", class: "block font-semibold mb-2" %>
    <%= form.text_field :title, class: "border border-gray-300 rounded w-full p-2", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Description", class: "block font-semibold mb-2" %>
    <%= form.text_area :description, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mt-4">
    <%= form.submit "Update Sound", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
