<%= form_with(model: [@mission, @handout], local: true) do |form| %>
  <!-- Handout Title -->
  <div class="mb-4">
    <%= form.label :title, "Handout Title", class: "block font-semibold mb-2" %>
    <%= form.text_field :title, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <!-- Attach a File (Image, Audio, etc.) -->
  <div class="mb-4">
    <%= form.label :file, "Attach a File (Image, Audio, etc.)", class: "block font-semibold mb-2" %>
    <%= form.file_field :file, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <!-- Rich Text Content (Description) -->
  <div class="mb-4">
    <%= form.label :content, "Description of the content", class: "block font-semibold mb-2" %>
    <%= form.rich_text_area :content, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <!-- Submit Button -->
  <div class="mt-4">
    <%= form.submit "Save Handout", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
