<%= form_with(model: weapon, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, "Name", class: "block font-semibold mb-2" %>
    <%= form.text_field :name, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :skill_percentage, "Skill Percentage", class: "block font-semibold mb-2" %>
    <%= form.number_field :skill_percentage, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :base_range, "Base Range (meters)", class: "block font-semibold mb-2" %>
    <%= form.number_field :base_range, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :damage, "Damage", class: "block font-semibold mb-2" %>
    <%= form.text_field :damage, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :armor_piercing, "Armor Piercing", class: "block font-semibold mb-2" %>
    <%= form.number_field :armor_piercing, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :lethality_percentage, "Lethality Percentage", class: "block font-semibold mb-2" %>
    <%= form.number_field :lethality_percentage, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :kill_radius, "Kill Radius (meters)", class: "block font-semibold mb-2" %>
    <%= form.number_field :kill_radius, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mb-4">
    <%= form.label :ammo, "Ammo", class: "block font-semibold mb-2" %>
    <%= form.text_field :ammo, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="mt-4">
    <%= form.submit weapon.persisted? ? "Update Weapon" : "Create Weapon", class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>
<% end %>
