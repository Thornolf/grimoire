<h1 class="text-3xl font-bold mb-8">Manage Conditions</h1>
</br>

<!-- Button to create a new condition -->
<div class="mb-6">
  <%= link_to "Create New Condition", new_condition_path, class: "bg-blue-500 px-6 py-2 rounded-lg shadow-md hover:bg-green-600" %>
</div>

<!-- Display Conditions -->
<div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-6">
  <% @conditions.each do |condition| %>
    <div class="bg-white shadow-lg rounded-lg p-6 border border-gray-200 hover:shadow-xl transition-shadow duration-300">
      <h2 class="text-xl font-semibold mb-2 text-blue-700"><%= condition.name %></h2>

      <p class="text-gray-600 mb-2">
        <span class="font-semibold">Type:</span> <%= condition.condition_type.humanize %>
      </p>

      <p class="text-gray-600 mb-2">
        <span class="font-semibold">Severity:</span> <%= condition.severity %>
      </p>

      <p class="text-gray-600 mb-4">
        <span class="font-semibold">Description:</span> <%= condition.description.presence || "No description available" %>
      </p>

      <div class="flex justify-between space-x-2">
        <!-- Buttons for Edit and Delete -->
        <%= link_to "Edit", edit_condition_path(condition), class: "bg-blue-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-yellow-600" %>
        <%= button_to "Delete", condition_path(condition), method: :delete, data: { confirm: "Are you sure?" }, class: "bg-red-500 text-white px-4 py-2 rounded-lg shadow-md hover:bg-red-600" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Back to Dashboard or Missions -->
<div class="mt-8">
  <%= link_to "Back to Dashboard", root_path, class: "text-blue-500 hover:underline" %>
</div>
