<%= form_with(model: @condition, local: true) do |form| %>
  <div class="mb-4">
    <%= form.label :name, "Condition Name", class: "block font-semibold mb-2" %>
    <%= form.text_field :name, class: "border border-gray-300 rounded w-full p-2", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :condition_type, "Condition Type", class: "block font-semibold mb-2" %>
    <%= form.select :condition_type, Condition.condition_types.keys.map { |type| [type.humanize, type] }, class: "border border-gray-300 rounded w-full p-2", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :severity, "Severity", class: "block font-semibold mb-2" %>
    <%= form.number_field :severity, class: "border border-gray-300 rounded w-full p-2", required: true %>
  </div>

  <div class="mb-4">
    <%= form.label :description, "Description", class: "block font-semibold mb-2" %>
    <%= form.text_area :description, class: "border border-gray-300 rounded w-full p-2" %>
  </div>

  <div class="flex justify-between">
    <%= form.submit "Save Condition", class: "bg-green-500 text-white px-4 py-2 rounded-lg hover:bg-green-700" %>
    <%= link_to 'Cancel', conditions_path, class: "bg-red-500 text-white px-4 py-2 rounded-lg hover:bg-red-700" %>
  </div>
<% end %>
